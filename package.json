{
  "name": "airtable-mcp-server",
  "version": "1.8.1",
  "description": "A Model Context Protocol server that provides read and write access to Airtable databases. This server enables LLMs to inspect database schemas, then read and write records.",
  "license": "MIT",
  "author": "Adam Jones (domdomegg), forked and maintained by musicaftersex",
  "repository": {
    "type": "git",
    "url": "https://github.com/musicaftersex/airtable-mcp-server.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "airtable-mcp-server": "bin/entrypoint.js"
  },
  "mcpName": "io.github.musicaftersex/airtable-mcp-server",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc --project tsconfig.build.json",
    "prepare": "npm run build",
    "start": "node ./bin/entrypoint.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint",
    "build:watch": "nodemon --watch src --ext ts --exec \"npm run build\"",
    "build:mcpb": "./build-mcpb.sh"
  },
  "dependencies": {
  "@modelcontextprotocol/sdk": "^1.16.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.2",
    "@types/node": "^22.10.2",
    "eslint": "^9.32.0",
    "eslint-config-domdomegg": "^2.0.9",
    "nodemon": "^3.1.7",
    "tsconfig-domdomegg": "^1.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
